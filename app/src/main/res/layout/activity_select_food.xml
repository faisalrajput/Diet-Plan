<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".select_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/options"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView."
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Copy Day From"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_copy_from"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:entries="@array/Days"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView.."
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Copy Day To"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_copy_to"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:entries="@array/Days"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Days"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinner_days"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:entries="@array/Days">

        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Meal Type"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinner_meal"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:entries="@array/Meal_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Food Category"
            android:textColor="@color/Black"
            android:textSize="15dp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinner_select_food_categories"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:entries="@array/add_food_category" />

    </LinearLayout>

    </LinearLayout>

    <ListView
        android:layout_below="@+id/options"

        android:id="@+id/list_view_select_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy" />

    </LinearLayout>


</RelativeLayout>